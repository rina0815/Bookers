<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end % %>
<div>
<%= link_to "show", book_path(@book.id) %> | <%= link_to "back", books_path %>
</div>