<!-- 投稿一覧 -->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
		<% @books.each do |book| %>
		  <tr>
			  <td><%= book.title %></td>
  		  <td><%= book.body %></td>
  		  <td><%= link_to "show", book_path(book) %></td>
  	    <td><%= link_to "edit", edit_book_path(book) %></td>
  	    <td><%= link_to "destroy", book, method: :delete, data: { confirm: 'Are you sure?'} %></td>
  	  </tr>
  	<% end %>
  </tbody>
</table>

<!-- 新規投稿 -->
<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>